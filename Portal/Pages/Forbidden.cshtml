@page
@model Portal.Pages.ForbiddenModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Access Denied";
}

<!-- Logo with shield inspiration -->
<img src="~/Resources/mlogo.jpeg" alt="Methodist University Ghana Logo" class="logo-img mb-4" />
<h1 class="h4 fw-bold">Access Denied</h1>
<p class="text-muted">You don't have permission to access this resource</p>
<p class="values">Excellence • Morality • Service</p>

<!-- Main Content Card -->
<div class="card shadow-sm border-0">
    <div class="card-body p-4 text-center">
        <!-- Warning Icon -->
        <div class="mb-4">
            <div class="forbidden-icon">
                <i class="bi bi-slash-circle"></i>
            </div>
        </div>

        <!-- Message -->
        <h2 class="h5 fw-bold text-danger mb-3">Forbidden Access</h2>
        <p class="text-muted mb-4">
            You don't have the required permissions to access this resource.
            Please contact your administrator if you believe you should have access.
        </p>

        <!-- Additional Information -->
        <div class="alert alert-light border mb-4">
            <small class="text-muted">
                <i class="bi bi-info-circle me-2"></i>
                This could be due to insufficient privileges or role-based restrictions.
            </small>
        </div>

        <!-- Action Buttons -->
        <div class="d-grid gap-2">
            <a asp-page="/Index" class="btn btn-primary btn-lg button">
                <i class="bi bi-house me-2"></i>
                <span class="button__text">Go to Homepage</span>
            </a>

            <button onclick="history.back()" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-arrow-left me-2"></i>
                Go Back
            </button>

            <a asp-page="/Account/Login" class="btn btn-link text-decoration-none text-muted">
                <i class="bi bi-box-arrow-in-right me-1"></i>Sign In as Different User
            </a>
        </div>

        <!-- Support Contact -->
        <div class="mt-4 pt-3 border-top">
            <small class="text-muted">
                Need help? Contact the
                <a href="mailto:it-support@methodistuniversity.edu.gh" class="text-primary text-decoration-none">
                    IT Support Team
                </a>
            </small>
        </div>
    </div>
</div>

<!-- Additional Information Section -->
<div class="text-center mt-4">
    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-shield-check text-primary me-2"></i>
                <small class="text-muted">Secure Access</small>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-person-gear text-primary me-2"></i>
                <small class="text-muted">Role-Based Permissions</small>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="d-flex align-items-center justify-content-center">
                <i class="bi bi-patch-check text-primary me-2"></i>
                <small class="text-muted">University Standards</small>
            </div>
        </div>
    </div>
</div>

<style>
    .forbidden-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        background: linear-gradient(135deg, #dc3545, #c82333);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: white;
        box-shadow: 0 4px 15px rgba(220, 53, 69, 0.3);
    }

    .card {
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .button {
        position: relative;
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .button--loading .button__text {
        visibility: hidden;
        opacity: 0;
    }

    .button--loading::after {
        content: "";
        position: absolute;
        width: 20px;
        height: 20px;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
        border: 2px solid transparent;
        border-top-color: #ffffff;
        border-radius: 50%;
        animation: button-loading-spinner 1s ease infinite;
    }

    @@keyframes button-loading-spinner {
        from {
            transform: rotate(0turn);
        }

        to {
            transform: rotate(1turn);
        }
    }

    .alert-light {
        background-color: #f8f9fa;
        border-color: #e9ecef !important;
    }

    .btn-link:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    /* Responsive adjustments */
    @@media (max-width: 576px) {
        .forbidden-icon {
            width: 60px;
            height: 60px;
            font-size: 2rem;
        }

        .card-body {
            padding: 1.5rem !important;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const buttons = document.querySelectorAll('.button');

            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    if (this.href || this.getAttribute('onclick')) {
                        this.classList.add('button--loading');
                        this.disabled = true;

                        setTimeout(() => {
                            if (this.href) {
                                window.location.href = this.href;
                            }
                        }, 500);
                    }
                });
            });

            const card = document.querySelector('.card');
            if (card) {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, 100);
            }
        });
    </script>
}