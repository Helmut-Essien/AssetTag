<!-- Additional Links -->
<div class="text-center mt-4">
    <a asp-page="/Account/ForgotPassword" class="text-primary text-decoration-none">Forgot password?</a>
    <p class="mt-3">
        Don't have an account?
        <a asp-page="/Account/Register" class="text-primary text-decoration-none">Create account</a>
    </p>
</div>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.querySelector('.password-toggle');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.textContent = '🙈';
            } else {
                passwordInput.type = 'password';
                toggleIcon.textContent = '👁️';
            }
        }

        // Attach submit handler to show spinner and prevent double submit
        (function () {
            const form = document.getElementById('loginForm');
            const btn = document.getElementById('signinButton');

            if (!form || !btn) return;

            form.addEventListener('submit', function (e) {
                // let client-side validation run first
                // if form is invalid, do not show loading state
                if (!form.checkValidity()) {
                    // let browser show validation UI
                    return;
                }

                // Add loading state
                btn.classList.add('button--loading');
                btn.disabled = true;

               
            }, { passive: true });
        })();
    </script>
    <partial name="_ValidationScriptsPartial" />
}