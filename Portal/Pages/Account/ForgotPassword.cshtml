@page
@model Portal.Pages.Account.ForgotPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forgot Password";
}

<!-- Logo -->
<img src="~/Resources/mlogo.jpeg" alt="Methodist University Ghana Logo" class="logo-img mb-4" />
<h1 class="h4 fw-bold">Reset your password</h1>
<p class="text-muted">Enter your email address and we'll send you a link to reset your password.</p>
<p class="values">Excellence • Morality • Service</p>

<!-- Success Message -->
@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.SuccessMessage
        @if (Model.ShowResetToken)
        {
            <div class="mt-2">
                <small class="text-muted">Reset Token (for testing):</small>
                <div class="bg-light p-2 mt-1 rounded">
                    <code class="small">@Model.ResetToken</code>
                </div>
                <small class="text-muted d-block mt-1">This will be removed in production.</small>
            </div>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Error Message -->
@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Forgot Password Form -->
<form method="post" id="forgotPasswordForm" asp-antiforgery="true" novalidate>
    <div class="form-group mb-4">
        <label asp-for="Input.Email" class="form-label">Email address</label>
        <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Enter your email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary btn-lg button" id="submitButton">
            <span class="button__text">Send reset link</span>
        </button>
    </div>

    <div class="text-center">
        <a asp-page="/Account/Login" class="text-primary text-decoration-none">Back to login</a>
    </div>
</form>

@section Scripts {
    <script>
        (function () {
            const form = document.getElementById('forgotPasswordForm');
            const btn = document.getElementById('submitButton');

            if (!form || !btn) return;

            form.addEventListener('submit', function (e) {
                if (!form.checkValidity()) {
                    return;
                }

                // Add loading state
                btn.classList.add('button--loading');
                btn.disabled = true;
            }, { passive: true });
        })();
    </script>
    <partial name="_ValidationScriptsPartial" />
}