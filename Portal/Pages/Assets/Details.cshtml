@page
@model Portal.Pages.Assets.DetailsModel
@{
    ViewData["Title"] = $"Asset Details - {Model.Asset?.Name}";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="./Index">Assets</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Asset?.Name</li>
                </ol>
            </nav>
            <h1 class="mb-0">@Model.Asset?.Name</h1>
            <p class="text-muted">Asset Tag: <strong>@Model.Asset?.AssetTag</strong></p>
        </div>
        <div>
            <a asp-page="./Index" class="btn btn-secondary me-2">
                <i class="bi bi-arrow-left me-1"></i>Back to List
            </a>
           @*  <a asp-page="./Edit" asp-route-id="@Model.Asset?.AssetId" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Edit Asset
            </a> *@
            <a href="/Assets/Index?editAssetId=@Model.Asset?.AssetId" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Edit Asset
            </a>
        </div>
    </div>

    @if (Model.Asset == null)
    {
        <div class="alert alert-warning" role="alert">
            Asset not found.
        </div>
        return;
    }

    <div class="row">
        <!-- Asset Details -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>Asset Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Asset Tag</dt>
                                <dd>@Model.Asset.AssetTag</dd>

                                <dt>Name</dt>
                                <dd>@Model.Asset.Name</dd>

                                <dt>Description</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Asset.Description) ? "No description provided" : Model.Asset.Description)</dd>

                                <dt>Category</dt>
                                <dd>@Model.CategoryName</dd>

                                <dt>Location</dt>
                                <dd>@Model.LocationName</dd>

                                <dt>Department</dt>
                                <dd>@Model.DepartmentName</dd>

                                <dt>Status</dt>
                                <dd>
                                    <span class="badge
                                        @(Model.Asset.Status == "Available" ? "bg-success" :
                                                                                                                              Model.Asset.Status == "In Use" ? "bg-primary" :
                                                                                                                              Model.Asset.Status == "Under Maintenance" ? "bg-warning" :
                                                                                                                              Model.Asset.Status == "Retired" ? "bg-secondary" : "bg-danger")">
                                        @Model.Asset.Status
                                    </span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Condition</dt>
                                <dd>
                                    <span class="badge
                                        @(Model.Asset.Condition == "New" ? "bg-success" :
                                                                                                                              Model.Asset.Condition == "Good" ? "bg-info" :
                                                                                                                              Model.Asset.Condition == "Fair" ? "bg-warning" :
                                                                                                                              Model.Asset.Condition == "Poor" ? "bg-danger" : "bg-secondary")">
                                        @Model.Asset.Condition
                                    </span>
                                </dd>

                                <dt>Serial Number</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Asset.SerialNumber) ? "N/A" : Model.Asset.SerialNumber)</dd>

                                <dt>Purchase Date</dt>
                                <dd>@Model.Asset.PurchaseDate?.ToString("MMM dd, yyyy")</dd>

                                <dt>Purchase Price</dt>
                                <dd>@(Model.Asset.PurchasePrice.HasValue ? "₵" + Model.Asset.PurchasePrice.Value.ToString("N2") : "N/A")</dd>

                                <dt>Current Value</dt>
                                <dd>@(Model.Asset.CurrentValue.HasValue ? "₵" + Model.Asset.CurrentValue.Value.ToString("N2") : "N/A")</dd>

                                <dt>Quantity</dt>
                                <dd>@Model.Asset.Quantity</dd>

                                <dt>Created Date</dt>
                                <dd>@Model.Asset.CreatedAt.ToString("MMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Financial Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-graph-up me-2"></i>Financial Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Vendor</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Asset.VendorName) ? "N/A" : Model.Asset.VendorName)</dd>

                                <dt>Invoice Number</dt>
                                <dd>@(string.IsNullOrEmpty(Model.Asset.InvoiceNumber) ? "N/A" : Model.Asset.InvoiceNumber)</dd>

                                <dt>Cost Per Unit</dt>
                                <dd>@(Model.Asset.CostPerUnit.HasValue ? "₵" + Model.Asset.CostPerUnit.Value.ToString("N2") : "N/A")</dd>

                                <dt>Total Cost</dt>
                                <dd>@(Model.Asset.TotalCost.HasValue ? "₵" + Model.Asset.TotalCost.Value.ToString("N2") : "N/A")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Depreciation Rate</dt>
                                <dd>@(Model.Asset.DepreciationRate.HasValue ? $"{Model.Asset.DepreciationRate.Value:F2}%" : "N/A")</dd>

                                <dt>Accumulated Depreciation</dt>
                                <dd>@(Model.Asset.AccumulatedDepreciation.HasValue ? "₵" + Model.Asset.AccumulatedDepreciation.Value.ToString("N2") : "N/A")</dd>

                                <dt>Net Book Value</dt>
                                <dd>@(Model.Asset.NetBookValue.HasValue ? "₵" + Model.Asset.NetBookValue.Value.ToString("N2") : "N/A")</dd>

                                <dt>Useful Life</dt>
                                <dd>
                                    @if (Model.Asset.CalculatedUsefulLifeYears.HasValue)
                                    {
                                        <text>@Model.Asset.CalculatedUsefulLifeYears.Value years</text>
                                        @if (Model.Asset.UsefulLifeYears.HasValue && Model.Asset.UsefulLifeYears.Value != Model.Asset.CalculatedUsefulLifeYears.Value)
                                        {
                                            <small class="text-muted">(User-specified)</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">(Auto-calculated)</small>
                                        }
                                        
                                        @* Show progress if purchase date is available *@
                                        @if (Model.Asset.PurchaseDate.HasValue)
                                        {
                                            var yearsOwned = (DateTime.UtcNow - Model.Asset.PurchaseDate.Value).TotalDays / 365.25;
                                            var usefulLife = Model.Asset.CalculatedUsefulLifeYears.Value;
                                            var progressPercentage = Math.Min(100, (yearsOwned / usefulLife) * 100);
                                            var isExpired = yearsOwned >= usefulLife;
                                            
                                            <div class="mt-2">
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <small class="text-muted">@yearsOwned.ToString("F1") of @usefulLife years used</small>
                                                    @if (isExpired)
                                                    {
                                                        <span class="badge bg-warning text-dark">Fully Depreciated</span>
                                                    }
                                                </div>
                                                <div class="progress" style="height: 8px;">
                                                    <div class="progress-bar @(isExpired ? "bg-warning" : "bg-primary")"
                                                         role="progressbar"
                                                         style="width: @progressPercentage.ToString("F1")%"
                                                         aria-valuenow="@progressPercentage"
                                                         aria-valuemin="0"
                                                         aria-valuemax="100">
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                    else
                                    {
                                        <text>N/A</text>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Warranty & Disposal -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Warranty & Disposal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Warranty Expiry</dt>
                                <dd>@(Model.Asset.WarrantyExpiry?.ToString("MMM dd, yyyy") ?? "N/A")</dd>

                                <dt>Warranty Status</dt>
                                <dd>
                                    @if (Model.Asset.WarrantyExpiry.HasValue)
                                    {
                                        var isExpired = Model.Asset.WarrantyExpiry < DateTime.Now;
                                        <span class="badge @(isExpired ? "bg-danger" : "bg-success")">
                                            @(isExpired ? "Expired" : "Active")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No warranty</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Disposal Date</dt>
                                <dd>@(Model.Asset.DisposalDate?.ToString("MMM dd, yyyy") ?? "N/A")</dd>

                                <dt>Disposal Value</dt>
                                <dd>@(Model.Asset.DisposalValue.HasValue ? "₵" + Model.Asset.DisposalValue.Value.ToString("N2") : "N/A")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Remarks -->
            @if (!string.IsNullOrEmpty(Model.Asset.Remarks))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-chat-text me-2"></i>Remarks
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Asset.Remarks</p>
                    </div>
                </div>
            }
        </div>

        <!-- Asset History -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-clock-history me-2"></i>Asset History
                    </h5>
                    <span class="badge bg-primary">@Model.AssetHistories.TotalCount Total</span>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <form method="post" asp-page-handler="ApplyFilters" class="mb-3">
                        <input type="hidden" name="id" value="@Model.Asset?.AssetId" />
                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label small fw-bold">Action Type</label>
                                <select asp-for="ActionFilter" class="form-select form-select-sm">
                                    <option value="">All Actions</option>
                                    <option value="CREATE">Create</option>
                                    <option value="UPDATE">Update</option>
                                    <option value="DELETE">Delete</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label small fw-bold">Date Range</label>
                                <div class="row g-1">
                                    <div class="col-6">
                                        <input asp-for="DateFrom" type="date" class="form-control form-control-sm" placeholder="From" />
                                    </div>
                                    <div class="col-6">
                                        <input asp-for="DateTo" type="date" class="form-control form-control-sm" placeholder="To" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="bi bi-funnel me-1"></i>Apply Filters
                                    </button>
                                    <button type="submit" asp-page-handler="ClearFilters" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-x-circle me-1"></i>Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Results Per Page -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <small class="text-muted">Showing @((Model.CurrentPage - 1) * Model.PageSize + 1)-@Math.Min(Model.CurrentPage * Model.PageSize, Model.AssetHistories.TotalCount) of @Model.AssetHistories.TotalCount</small>
                        <select asp-for="PageSize" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
                            <option value="5">5 per page</option>
                            <option value="10">10 per page</option>
                            <option value="20">20 per page</option>
                            <option value="50">50 per page</option>
                        </select>
                    </div>

                    @if (Model.AssetHistories.Data.Any())
                    {
                        <div class="timeline">
                            @foreach (var history in Model.AssetHistories.Data)
                            {
                                <div class="timeline-item mb-3">
                                    <div class="timeline-marker
                                                @(history.Action == "CREATE" ? "bg-success" :
                                                                                   history.Action == "UPDATE" ? "bg-primary" :
                                                                                   history.Action == "DELETE" ? "bg-danger" : "bg-secondary")">
                                                                                                                                        </div>
                                                                                                                                        <div class="timeline-content">
                                                                                                                                            <h6 class="mb-1">
                                                                                                                                                <span class="badge
                                                        @(history.Action == "CREATE" ? "bg-success" :
                                                                                                    history.Action == "UPDATE" ? "bg-primary" :
                                                                                                    history.Action == "DELETE" ? "bg-danger" : "bg-secondary")">
                                        @history.Action
                                    </span>
                                </h6>
                                <p class="text-muted small mb-1">
                                    @history.Timestamp.ToString("MMM dd, yyyy HH:mm")
                                    by <strong>@history.UserFullName</strong>
                                </p>
                                <p class="mb-1 small">@history.Description</p>

                                @if (!string.IsNullOrEmpty(history.OldStatus) || !string.IsNullOrEmpty(history.NewStatus))
                                        {
                                            <div class="mt-2">
                                                <small class="text-muted">Status Change:</small>
                                                @if (!string.IsNullOrEmpty(history.OldStatus))
                                                {
                                                    <span class="badge bg-secondary me-1">@history.OldStatus</span>
                                                }
                                                <i class="bi bi-arrow-right text-muted mx-1"></i>
                                                @if (!string.IsNullOrEmpty(history.NewStatus))
                                                {
                                                    <span class="badge bg-primary">@history.NewStatus</span>
                                                }
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(history.OldLocationId) || !string.IsNullOrEmpty(history.NewLocationId))
                                        {
                                            <div class="mt-1">
                                                <small class="text-muted">Location Change:</small>
                                                @if (!string.IsNullOrEmpty(history.OldLocationId))
                                                {
                                                    <span class="badge bg-light text-dark me-1">@Model.GetLocationName(history.OldLocationId)</span>
                                                }
                                                <i class="bi bi-arrow-right text-muted mx-1"></i>
                                                @if (!string.IsNullOrEmpty(history.NewLocationId))
                                                {
                                                    <span class="badge bg-light text-dark">@Model.GetLocationName(history.NewLocationId)</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pagination -->
                        @if (Model.AssetHistories.TotalPages > 1)
                        {
                            <nav aria-label="History pagination" class="mt-3">
                                <ul class="pagination pagination-sm justify-content-center">
                                    <li class="page-item @(!Model.AssetHistories.HasPrevious ? "disabled" : "")">
                                        <a class="page-link" href="@Model.GetPageUrl(1)" aria-label="First">
                                            <i class="bi bi-chevron-double-left"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(!Model.AssetHistories.HasPrevious ? "disabled" : "")">
                                        <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage - 1)" aria-label="Previous">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.AssetHistories.TotalPages, Model.CurrentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link" href="@Model.GetPageUrl(i)">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(!Model.AssetHistories.HasNext ? "disabled" : "")">
                                        <a class="page-link" href="@Model.GetPageUrl(Model.CurrentPage + 1)" aria-label="Next">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                    <li class="page-item @(!Model.AssetHistories.HasNext ? "disabled" : "")">
                                        <a class="page-link" href="@Model.GetPageUrl(Model.AssetHistories.TotalPages)" aria-label="Last">
                                            <i class="bi bi-chevron-double-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-clock-history display-4 text-muted"></i>
                            <p class="text-muted mt-2">No history records found</p>
                            @if (!string.IsNullOrEmpty(Model.ActionFilter) || !string.IsNullOrEmpty(Model.DateFrom) || !string.IsNullOrEmpty(Model.DateTo))
                            {
                                <p class="small text-muted">Try adjusting your filters</p>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-speedometer2 me-2"></i>Quick Stats
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="stat-value">@Model.AssetHistories.TotalCount</div>
                            <div class="stat-label">History Entries</div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="stat-value">@Model.AssetAge</div>
                            <div class="stat-label">Days Owned</div>
                        </div>
                        <div class="col-12">
                            <div class="stat-value">
                                @if (Model.Asset.AccumulatedDepreciation.HasValue && Model.Asset.PurchasePrice.HasValue && Model.Asset.PurchasePrice.Value > 0)
                                {
                                    var depreciationPercentage = (Model.Asset.AccumulatedDepreciation.Value / Model.Asset.PurchasePrice.Value) * 100;
                                    <text>@depreciationPercentage.ToString("F1")%</text>
                                }
                                else
                                {
                                    <text>N/A</text>
                                }
                            </div>
                            <div class="stat-label">Depreciation</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .timeline {
        position: relative;
        padding-left: 20px;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 10px;
    }

    .timeline-marker {
        position: absolute;
        left: -20px;
        top: 5px;
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }

    .timeline-content {
        padding-left: 10px;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
        color: #007bff;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #6c757d;
        text-transform: uppercase;
    }

    .page-item.active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set selected values for dropdowns
            const actionFilter = document.getElementById('ActionFilter');
            const pageSize = document.getElementById('PageSize');

            if (actionFilter) {
                actionFilter.value = '@Model.ActionFilter';
            }

            if (pageSize) {
                pageSize.value = '@Model.PageSize';
            }
        });
    </script>
}