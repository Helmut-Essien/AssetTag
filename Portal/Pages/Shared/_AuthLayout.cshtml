@* _AuthLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <style>
        /* General styling */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            /* Background pattern from Uiverse.io by themrsami */
            width: 100%;
            height: 100%;
            background-color: #0f172a;
            background-image: linear-gradient( 45deg, rgba(59, 130, 246, 0.08) 25%, transparent 25%, transparent 75%, rgba(59, 130, 246, 0.08) 75% ), linear-gradient( -45deg, rgba(59, 130, 246, 0.08) 25%, transparent 25%, transparent 75%, rgba(59, 130, 246, 0.08) 75% ), linear-gradient( 45deg, transparent 40%, rgba(99, 102, 241, 0.1) 40%, rgba(99, 102, 241, 0.1) 60%, transparent 60% ), linear-gradient( -45deg, transparent 40%, rgba(99, 102, 241, 0.1) 40%, rgba(99, 102, 241, 0.1) 60%, transparent 60% ), radial-gradient(circle at 50% 50%, #1e293b 0%, #0f172a 100%);
            background-size: 60px 60px, 60px 60px, 120px 120px, 120px 120px, 100% 100%;
            background-position: 0 0, 30px 30px, 0 0, 60px 60px, 0 0;
            position: relative;
        }

            body::before {
                content: "";
                position: absolute;
                inset: 0;
                background: repeating-linear-gradient( 45deg, rgba(255, 255, 255, 0.03) 0px, rgba(255, 255, 255, 0.03) 1px, transparent 1px, transparent 10px ), repeating-linear-gradient( -45deg, rgba(255, 255, 255, 0.03) 0px, rgba(255, 255, 255, 0.03) 1px, transparent 1px, transparent 10px );
                background-size: 20px 20px;
                filter: blur(0.5px);
            }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 15px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background: #ffffff;
            overflow: hidden;
            width: 100%;
            max-width: 500px; /* Responsive max-width */
        }

        .card-body {
            padding: 2rem;
        }

        .logo-img {
            max-width: 120px; /* Responsive base size */
            width: 100%;
            height: auto;
        }

        h1 {
            color: #1e3a8a; /* Dark blue from logo */
            font-size: clamp(1.5rem, 4vw, 2rem); /* Responsive text */
        }

        p.text-muted {
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .form-control {
            border: 2px solid #1e3a8a;
            border-radius: 25px; /* Rounded pill style */
            padding: 0.75rem;
            font-size: clamp(1rem, 2.5vw, 1.2rem); /* Responsive input text */
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #2b6cb0;
                box-shadow: 0 0 0 3px rgba(43, 108, 176, 0.2);
                outline: none;
            }

        .btn-primary {
            background-color: #2b6cb0; /* Blue from logo */
            border-color: #2b6cb0;
            font-size: clamp(1rem, 2.5vw, 1.2rem);
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 25px;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1e3a8a;
                border-color: #1e3a8a;
            }

        .text-primary {
            color: #2b6cb0 !important;
        }

            .text-primary:hover {
                color: #1e3a8a !important;
            }

        .alert-danger {
            border-radius: 8px;
            font-size: clamp(0.9rem, 2vw, 1rem);
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #1e3a8a;
        }

        .form-group {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .values {
            font-size: clamp(0.8rem, 2vw, 1rem);
            color: #2b6cb0;
            text-align: center;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body text-center">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>