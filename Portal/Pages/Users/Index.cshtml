            rolesList.innerHTML = '<li class="list-group-item text-muted">No roles in system.</li>';
        }
    }

    function addUserRole(userId, roleName) {
        console.log('[ADD_USER_ROLE] Starting - UserId:', userId, 'RoleName:', roleName);
        
