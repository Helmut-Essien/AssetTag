    // ========== ROLE MANAGEMENT FUNCTIONS ==========

    function loadUserRoles(userId) {
        console.log('[LOAD_USER_ROLES] Starting for userId:', userId);
        const url = `?handler=RolesData&id=${userId}`;
        console.log('[LOAD_USER_ROLES] URL:', url);
        
        fetch(url)
            .then(response => {
                console.log('[LOAD_USER_ROLES] Response status:', response.status);
                console.log('[LOAD_USER_ROLES] Response OK:', response.ok);
                console.log('[LOAD_USER_ROLES] Response headers:', [...response.headers.entries()]);
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(data => {
                console.log('[LOAD_USER_ROLES] Data received:', data);
                displayUserRoles(data.roles, data.userId);
            })
            .catch(error => {
                console.error('[LOAD_USER_ROLES] Error:', error);
                console.error('[LOAD_USER_ROLES] Error stack:', error.stack);
                showRolesMessage('Error loading user roles: ' + error.message, 'danger');
            });
    }

    function loadAvailableRoles() {
        console.log('[LOAD_AVAILABLE_ROLES] Starting');
        const url = '?handler=AllRolesData';
        console.log('[LOAD_AVAILABLE_ROLES] URL:', url);
        
        fetch(url)
            .then(response => {
                console.log('[LOAD_AVAILABLE_ROLES] Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(roles => {
                console.log('[LOAD_AVAILABLE_ROLES] Roles received:', roles);
                populateRolesDropdown(roles);
            })
            .catch(error => {
                console.error('[LOAD_AVAILABLE_ROLES] Error:', error);
                document.getElementById('newRoleName').innerHTML = '<option value="">Error loading roles</option>';
            });
    }

    function loadAllSystemRoles() {
        console.log('[LOAD_SYSTEM_ROLES] Starting');
        fetch('?handler=AllRolesData')
            .then(response => {
                console.log('[LOAD_SYSTEM_ROLES] Response status:', response.status);
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }
                return response.json();
            })
            .then(roles => {
                console.log('[LOAD_SYSTEM_ROLES] Roles received:', roles);
                displaySystemRoles(roles);
            })
            .catch(error => {
                console.error('[LOAD_SYSTEM_ROLES] Error:', error);
                showManageRolesMessage('Error loading system roles: ' + error.message, 'danger');
            });
    }

    function displayUserRoles(roles, userId) {
        console.log('[DISPLAY_USER_ROLES] Displaying roles for userId:', userId, 'Roles:', roles);
        var rolesList = document.getElementById('currentRolesList');
        rolesList.innerHTML = '';

        if (roles && roles.length > 0) {
            roles.forEach(function(role) {
                var listItem = document.createElement('li');
                listItem.className = 'list-group-item d-flex justify-content-between align-items-center';
                listItem.innerHTML = `
                    ${role}
                    <button type="button" class="btn btn-danger btn-sm remove-role-btn"
                            data-userid="${userId}" data-rolename="${role}">
                        Remove
                    </button>
                `;
                rolesList.appendChild(listItem);
            });

            document.querySelectorAll('.remove-role-btn').forEach(button => {
                button.addEventListener('click', function() {
                    var userId = this.getAttribute('data-userid');
                    var roleName = this.getAttribute('data-rolename');
                    console.log('[REMOVE_ROLE_BTN] Clicked for userId:', userId, 'roleName:', roleName);
                    removeUserRole(userId, roleName);
                });
            });
        } else {
            rolesList.innerHTML = '<li class="list-group-item text-muted">No roles assigned.</li>';
        }
    }

    function populateRolesDropdown(roles) {
        console.log('[POPULATE_DROPDOWN] Populating with roles:', roles);
        var select = document.getElementById('newRoleName');
        select.innerHTML = '<option value="">Select a role...</option>';
        
        if (roles && roles.length > 0) {
            roles.forEach(role => {
                var option = document.createElement('option');
                option.value = role;
                option.textContent = role;
                select.appendChild(option);
            });
        } else {
            select.innerHTML = '<option value="">No roles available</option>';
        }
    }

    function displaySystemRoles(roles) {
        console.log('[DISPLAY_SYSTEM_ROLES] Displaying roles:', roles);
        var rolesList = document.getElementById('systemRolesList');
        rolesList.innerHTML = '';

        if (roles && roles.length > 0) {
            roles.forEach(function(role) {
