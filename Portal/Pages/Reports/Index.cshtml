@page
@model Portal.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <h1 class="mb-4">Reports Dashboard</h1>

    <!-- Status Messages -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- AI Status Indicator -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="alert @(Model.IsAiConnected ? "alert-success" : "alert-warning")">
                <i class="bi @(Model.IsAiConnected ? "bi-check-circle" : "bi-exclamation-triangle") me-2"></i>
                AI Assistant: @(Model.IsAiConnected ? "Connected and Ready" : "Limited Mode - Using fallback queries")
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Predefined Reports Section -->
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Predefined Reports</h5>
                    <span class="badge bg-light text-dark">6 Templates</span>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="assets-by-status"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "assets-by-status" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-pie-chart-fill text-primary fs-1"></i>
                                    <h6 class="mt-2">Assets by Status</h6>
                                    <small class="text-muted">Distribution of assets by status</small>
                                    @if (Model.SelectedReportType == "assets-by-status")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-primary">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="assets-by-department"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "assets-by-department" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-building text-success fs-1"></i>
                                    <h6 class="mt-2">Assets by Department</h6>
                                    <small class="text-muted">Department-wise asset allocation</small>
                                    @if (Model.SelectedReportType == "assets-by-department")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-success">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="assets-by-location"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "assets-by-location" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-geo-alt text-warning fs-1"></i>
                                    <h6 class="mt-2">Assets by Location</h6>
                                    <small class="text-muted">Location-based asset distribution</small>
                                    @if (Model.SelectedReportType == "assets-by-location")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-warning">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="maintenance-schedule"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "maintenance-schedule" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-tools text-danger fs-1"></i>
                                    <h6 class="mt-2">Maintenance Schedule</h6>
                                    <small class="text-muted">Upcoming maintenance tasks</small>
                                    @if (Model.SelectedReportType == "maintenance-schedule")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-danger">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="warranty-expiry"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "warranty-expiry" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-check text-info fs-1"></i>
                                    <h6 class="mt-2">Warranty Expiry</h6>
                                    <small class="text-muted">Assets with expiring warranty</small>
                                    @if (Model.SelectedReportType == "warranty-expiry")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-info">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="fixed-assets-schedule"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "fixed-assets-schedule" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-table text-primary fs-1"></i>
                                    <h6 class="mt-2">Fixed Assets Schedule</h6>
                                    <small class="text-muted">Category-based depreciation schedule</small>
                                    @if (Model.SelectedReportType == "fixed-assets-schedule")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-primary">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a asp-page="/Reports/Index" asp-route-reportType="depreciation-date-range"
                               class="card h-100 report-card text-decoration-none @(Model.SelectedReportType == "depreciation-date-range" ? "border-primary border-2" : "")">
                                <div class="card-body text-center">
                                    <i class="bi bi-calendar-range text-success fs-1"></i>
                                    <h6 class="mt-2">Depreciation by Date Range</h6>
                                    <small class="text-muted">Custom period depreciation report</small>
                                    @if (Model.SelectedReportType == "depreciation-date-range")
                                    {
                                        <div class="mt-2">
                                            <span class="badge bg-success">Selected</span>
                                        </div>
                                    }
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <form method="post" asp-page-handler="ExportReport" class="d-grid">
                                    <input type="hidden" name="format" value="csv">
                                    <input type="hidden" name="reportType" value="@Model.SelectedReportType">
                                    <button type="submit" class="btn btn-outline-primary" @(string.IsNullOrEmpty(Model.SelectedReportType) ? "disabled" : "")>
                                        <i class="bi bi-file-earmark-text me-2"></i>Export as CSV
                                    </button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <form method="post" asp-page-handler="ExportReport" class="d-grid">
                                    <input type="hidden" name="format" value="excel">
                                    <input type="hidden" name="reportType" value="@Model.SelectedReportType">
                                    <button type="submit" class="btn btn-success" @(string.IsNullOrEmpty(Model.SelectedReportType) ? "disabled" : "")>
                                        <i class="bi bi-file-earmark-excel me-2"></i>Export as Excel
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- AI Chat Interface -->
        <div class="col-lg-6">
            <div class="card mb-4 h-100">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-robot me-2"></i>AI Report Assistant</h5>
                    <span class="badge bg-light text-dark">Powered by Groq</span>
                </div>
                <div class="card-body d-flex flex-column p-0">
                    <!-- Chat History -->
                    <div id="chatContainer" class="flex-grow-1 p-3"
                         style="height: 350px; overflow-y: auto; background-color: #f8f9fa;">
                        @foreach (var message in Model.ChatHistory)
                        {
                            if (message.Role == "system")
                            {
                                <div class="system-message mb-3">
                                    <div class="alert alert-info p-2">
                                        <small><strong><i class="bi bi-info-circle me-1"></i>System:</strong> @message.Content</small>
                                    </div>
                                </div>
                            }
                            else if (message.Role == "user")
                            {
                                <div class="user-message mb-3 text-end">
                                    <div class="d-inline-block">
                                        <div class="alert alert-primary p-2 mb-1">
                                            <small>@message.Content</small>
                                        </div>
                                        <div class="text-muted" style="font-size: 0.75rem;">
                                            <i class="bi bi-person-circle me-1"></i>You @message.DisplayTime
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (message.Role == "assistant")
                            {
                                <div class="ai-message mb-3">
                                    <div class="d-inline-block">
                                        <div class="alert alert-secondary p-2 mb-1">
                                            <small><strong><i class="bi bi-robot me-1"></i>Assistant:</strong> @message.Content</small>
                                        </div>
                                        <div class="text-muted" style="font-size: 0.75rem;">
                                            <i class="bi bi-robot me-1"></i>AI Assistant @message.DisplayTime
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <!-- Chat Input Area -->
                    <div class="border-top p-3">
                        <form method="post" asp-page-handler="ProcessQuery" class="mb-3">
                            <div class="input-group">
                                <input type="text" name="chatInput" class="form-control"
                                       placeholder="Ask a question about your assets (e.g., 'Show me all laptops in IT department')"
                                       required>
                                <button class="btn btn-primary" type="submit" title="Send message">
                                    <i class="bi bi-send"></i>
                                </button>
                            </div>

                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" name="autoQuery" value="true" checked id="autoQuery">
                                <label class="form-check-label" for="autoQuery">
                                    <small>Show SQL before executing (recommended)</small>
                                </label>
                            </div>

                            <div class="mt-2">
                                <small class="text-muted">Try: "assets under maintenance", "high value items", "warranty expiring this month"</small>
                            </div>
                        </form>

                        <!-- SQL Query Preview -->
                        @if (!string.IsNullOrEmpty(Model.GeneratedSql))
                        {
                            <div class="mt-3">
                                <div class="card">
                                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                        <small><strong><i class="bi bi-code-slash me-1"></i>Generated SQL Query</strong></small>
                                        <button class="btn btn-sm btn-outline-secondary" onclick="copyToClipboard('sqlQuery')" title="Copy SQL">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </div>
                                    <div class="card-body p-2">
                                        <pre class="mb-0" id="sqlQuery" style="font-size: 12px; max-height: 150px; overflow-y: auto;">@Model.GeneratedSql</pre>

                                        <!-- Form to run the SQL -->
                                        <form method="post" asp-page-handler="RunSql" class="mt-2">
                                            <input type="hidden" name="sqlQuery" value="@Model.GeneratedSql">
                                            <div class="d-grid">
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="bi bi-play-circle me-1"></i>Execute This Query
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Report Results Section -->
    <div class="row mt-2">
        <div class="col-12">
            @if (Model.SelectedReportType == "depreciation-date-range")
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="get" class="row g-3 align-items-end">
                            <input type="hidden" name="reportType" value="depreciation-date-range" />
                            <div class="col-md-3">
                                <label for="startDate" class="form-label fw-bold">Start Date</label>
                                <input type="date" name="startDate" id="startDate" class="form-control"
                                       value="@(Model.StartDate?.ToString("yyyy-MM-dd") ?? DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd"))" />
                            </div>
                            <div class="col-md-3">
                                <label for="endDate" class="form-label fw-bold">End Date</label>
                                <input type="date" name="endDate" id="endDate" class="form-control"
                                       value="@(Model.EndDate?.ToString("yyyy-MM-dd") ?? DateTime.Now.ToString("yyyy-MM-dd"))" />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-search me-1"></i>Generate Report
                                </button>
                            </div>
                            <div class="col-md-3">
                                <div class="btn-group w-100" role="group">
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('week')">This Week</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('month')">This Month</button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="setDateRange('quarter')">This Quarter</button>
                                </div>
                            </div>
                        </form>
                        
                        @if (Model.DepreciationSummary.ValueKind != System.Text.Json.JsonValueKind.Undefined &&
                             Model.DepreciationSummary.ValueKind != System.Text.Json.JsonValueKind.Null)
                        {
                            <div class="row mt-4">
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <small class="text-muted">Total Assets</small>
                                            <h4 class="mb-0">@Model.DepreciationSummary.GetProperty("totalAssets").GetInt32()</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-light">
                                        <div class="card-body text-center">
                                            <small class="text-muted">Days in Period</small>
                                            <h4 class="mb-0">@Model.DepreciationSummary.GetProperty("daysInPeriod").GetInt32()</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-warning bg-opacity-25">
                                        <div class="card-body text-center">
                                            <small class="text-muted">Period Depreciation</small>
                                            <h4 class="mb-0">@Model.DepreciationSummary.GetProperty("totalDepreciationForPeriod").GetDecimal().ToString("N0")</h4>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card bg-info bg-opacity-25">
                                        <div class="card-body text-center">
                                            <small class="text-muted">Value at Period End</small>
                                            <h4 class="mb-0">@Model.DepreciationSummary.GetProperty("totalValueAtEnd").GetDecimal().ToString("N0")</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (Model.SelectedReportType == "fixed-assets-schedule")
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <form method="get" class="row g-3 align-items-end">
                            <input type="hidden" name="reportType" value="fixed-assets-schedule" />
                            <div class="col-md-3">
                                <label for="yearSelect" class="form-label fw-bold">Select Report Year</label>
                                <select name="year" id="yearSelect" class="form-select" onchange="this.form.submit()">
                                    @{
                                        var currentYear = DateTime.Now.Year;
                                        var selectedYear = Model.ReportYear ?? currentYear;
                                        for (int y = currentYear; y >= 2020; y--)
                                        {
                                            <option value="@y" selected="@(y == selectedYear)">@y</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-9">
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>Showing report for year: @selectedYear</strong>
                                    <br />
                                    <small>Additions = Assets purchased between Jan 1 and Dec 31, @selectedYear</small>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            }
            <div class="card">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-table me-2"></i>Report Results
                        <span class="badge bg-light text-dark ms-2">@Model.ReportResults.Count rows</span>
                    </h5>
                    <div>
                        @if (Model.ReportResults.Any())
                        {
                            <form method="post" asp-page-handler="ExportReport" class="d-inline me-2">
                                <input type="hidden" name="format" value="csv">
                                <input type="hidden" name="reportType" value="@Model.SelectedReportType">
                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-file-earmark-text me-1"></i>Export to CSV
                                </button>
                            </form>
                            <form method="post" asp-page-handler="ExportReport" class="d-inline">
                                <input type="hidden" name="format" value="excel">
                                <input type="hidden" name="reportType" value="@Model.SelectedReportType">
                                <button type="submit" class="btn btn-sm btn-success">
                                    <i class="bi bi-file-earmark-excel me-1"></i>Export to Excel
                                </button>
                            </form>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.ReportResults.Any())
                    {
                        @if (Model.SelectedReportType == "fixed-assets-schedule")
                        {
                            <!-- Fixed Assets Schedule - Special formatting -->
                            <div class="table-responsive">
                                <table class="table table-bordered table-sm" id="reportTable" style="font-size: 0.9rem; width: auto; table-layout: auto;">
                                    <thead class="table-dark">
                                        <tr>
                                            @{
                                                var isFirstHeader = true;
                                            }
                                            @foreach (var key in Model.ReportResults.First().Keys)
                                            {
                                                <th class="text-center fw-bold" style="vertical-align: middle; white-space: nowrap; @(isFirstHeader ? "min-width: 180px;" : "")">
                                                    @if (key == "")
                                                    {
                                                        <span>&nbsp;</span>
                                                    }
                                                    else
                                                    {
                                                        @key
                                                    }
                                                </th>
                                                isFirstHeader = false;
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            var sectionHeaders = new[] { "Cost/Valuation", "Depreciation" };
                                            var currentSection = "";
                                        }
                                        @foreach (var row in Model.ReportResults)
                                        {
                                            var rowLabel = row.Values.FirstOrDefault()?.ToString() ?? "";
                                            
                                            @* Check if this is a section header row *@
                                            @if (rowLabel == "Cost/Valuation" || rowLabel == "Depreciation")
                                            {
                                                currentSection = rowLabel;
                                                <tr class="table-secondary">
                                                    <td colspan="@Model.ReportResults.First().Keys.Count" class="fw-bold py-2" style="font-size: 1rem;">
                                                        @rowLabel
                                                    </td>
                                                </tr>
                                            }
                                            else if (string.IsNullOrEmpty(rowLabel))
                                            {
                                                @* Empty separator row *@
                                                <tr style="height: 10px;">
                                                    <td colspan="@Model.ReportResults.First().Keys.Count" style="background-color: #f8f9fa;"></td>
                                                </tr>
                                            }
                                            else
                                            {
                                                <tr class="@(rowLabel.StartsWith("NBV") ? "table-info" : "")">
                                                    @{
                                                        var isFirst = true;
                                                        var columnIndex = 0;
                                                        var totalColumns = row.Values.Count();
                                                    }
                                                    @foreach (var value in row.Values)
                                                    {
                                                        @if (isFirst)
                                                        {
                                                            <td class="fw-bold" style="white-space: nowrap;">@value</td>
                                                            isFirst = false;
                                                        }
                                                        else if (columnIndex == totalColumns - 1)
                                                        {
                                                            @* Last column (Total) - make it bold *@
                                                            <td class="text-end fw-bold" style="white-space: nowrap; padding-left: 15px; padding-right: 15px;">
                                                                @if (value is decimal decimalValue)
                                                                {
                                                                    @decimalValue.ToString("N0")
                                                                }
                                                                else if (value?.ToString() == "-" || string.IsNullOrEmpty(value?.ToString()))
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                                else
                                                                {
                                                                    @value
                                                                }
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td class="text-end" style="white-space: nowrap; padding-left: 15px; padding-right: 15px;">
                                                                @if (value is decimal decimalValue)
                                                                {
                                                                    @decimalValue.ToString("N0")
                                                                }
                                                                else if (value?.ToString() == "-" || string.IsNullOrEmpty(value?.ToString()))
                                                                {
                                                                    <span class="text-muted">-</span>
                                                                }
                                                                else
                                                                {
                                                                    @value
                                                                }
                                                            </td>
                                                        }
                                                        columnIndex++;
                                                    }
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <!-- Standard table format for other reports -->
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="reportTable">
                                    <thead class="table-dark">
                                        <tr>
                                            @foreach (var key in Model.ReportResults.First().Keys)
                                            {
                                                <th>@key</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var row in Model.ReportResults)
                                        {
                                            <tr>
                                                @foreach (var value in row.Values)
                                                {
                                                    <td>
                                                        @if (value is DateTime dateValue)
                                                        {
                                                            @dateValue.ToString("yyyy-MM-dd")
                                                        }
                                                        else if (value is decimal decimalValue)
                                                        {
                                                            @decimalValue.ToString("N2")
                                                        }
                                                        else
                                                        {
                                                            @value
                                                        }
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center text-muted p-5">
                            <i class="bi bi-bar-chart fs-1"></i>
                            <p class="mt-3">Select a report template or ask the AI assistant a question to see results</p>
                            <div class="mt-3">
                                <small class="text-muted">Try asking: "Show me all assets" or "List departments with most assets"</small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Function to scroll chat to bottom
        function scrollChatToBottom() {
            const chatContainer = document.getElementById('chatContainer');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        }

        // Copy SQL to clipboard
        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            const text = element.textContent || element.innerText;

            navigator.clipboard.writeText(text).then(() => {
                // Show temporary success message
                const button = element.closest('.card').querySelector('button');
                const originalHtml = button.innerHTML;
                button.innerHTML = '<i class="bi bi-check"></i>';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');

                setTimeout(() => {
                    button.innerHTML = originalHtml;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }

        // Export table to CSV
        function exportTableToCSV(tableId, filename = 'report.csv') {
            const table = document.getElementById(tableId);
            if (!table) {
                alert('No data to export');
                return;
            }

            let csv = [];
            const rows = table.querySelectorAll('tr');

            for (const row of rows) {
                const rowData = [];
                const cols = row.querySelectorAll('td, th');

                for (const col of cols) {
                    let text = col.innerText;
                    // Escape quotes and wrap in quotes if contains comma
                    text = text.replace(/"/g, '""');
                    if (text.includes(',') || text.includes('"') || text.includes('\n')) {
                        text = `"${text}"`;
                    }
                    rowData.push(text);
                }

                csv.push(rowData.join(','));
            }

            downloadCSV(csv.join('\n'), filename);
        }

        // Export to Excel (simplified - uses CSV for now)
        function exportTableToExcel() {
            const filename = `report_${new Date().toISOString().slice(0, 10)}.xlsx`;
            exportTableToCSV('reportTable', filename);
        }

        // Download CSV file
        function downloadCSV(csv, filename) {
            const csvFile = new Blob([csv], { type: 'text/csv' });
            const downloadLink = document.createElement('a');
            downloadLink.download = filename;
            downloadLink.href = window.URL.createObjectURL(csvFile);
            downloadLink.style.display = 'none';
            document.body.appendChild(downloadLink);
            downloadLink.click();
            document.body.removeChild(downloadLink);
        }

