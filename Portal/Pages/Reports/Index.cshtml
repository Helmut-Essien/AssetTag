        });

        // Auto-resize SQL query display
        function autoResizeTextarea(textarea) {
            textarea.style.height = 'auto';
            textarea.style.height = (textarea.scrollHeight) + 'px';
        }

        // Handle Enter key in chat input (but allow Shift+Enter for new line)
        document.querySelector('input[name="chatInput"]')?.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                this.closest('form').querySelector('button[type="submit"]').click();
            }
        });

        // Date range helper functions
        function setDateRange(period) {
            const today = new Date();
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');
            
            let startDate = new Date();
            
            switch(period) {
                case 'week':
                    // Start of current week (Monday)
                    const day = today.getDay();
                    const diff = today.getDate() - day + (day === 0 ? -6 : 1);
                    startDate = new Date(today.setDate(diff));
                    break;
                case 'month':
                    // Start of current month
                    startDate = new Date(today.getFullYear(), today.getMonth(), 1);
                    break;
                case 'quarter':
                    // Start of current quarter
                    const quarter = Math.floor(today.getMonth() / 3);
                    startDate = new Date(today.getFullYear(), quarter * 3, 1);
                    break;
            }
            
            startDateInput.value = startDate.toISOString().split('T')[0];
            endDateInput.value = new Date().toISOString().split('T')[0];
        }
    </script>
