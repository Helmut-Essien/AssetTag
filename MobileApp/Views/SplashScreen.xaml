<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.SplashScreen"
             BackgroundColor="{StaticResource DarkBackground}"
             NavigationPage.HasNavigationBar="False">
    
    <Grid>
        <VerticalStackLayout 
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Spacing="40">
            
            <!-- Logo with rounded corners -->
            <Border 
                StrokeThickness="0"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="250"
                HeightRequest="250">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="30"/>
                </Border.StrokeShape>
                <Image 
                    Source="helmut_logo.png"
                    Aspect="AspectFit"
                    WidthRequest="250"
                    HeightRequest="250"/>
            </Border>
            
            <!-- Loading animation - Three dots -->
            <HorizontalStackLayout 
                HorizontalOptions="Center"
                Spacing="10">
                
                <Ellipse 
                    x:Name="Dot1"
                    Fill="{StaticResource BrandGreen}"
                    WidthRequest="12"
                    HeightRequest="12"
                    Opacity="0.3"/>
                
                <Ellipse 
                    x:Name="Dot2"
                    Fill="{StaticResource BrandGreen}"
                    WidthRequest="12"
                    HeightRequest="12"
                    Opacity="0.3"/>
                
                <Ellipse 
                    x:Name="Dot3"
                    Fill="{StaticResource BrandGreen}"
                    WidthRequest="12"
                    HeightRequest="12"
                    Opacity="0.3"/>
                
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>