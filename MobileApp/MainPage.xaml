<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Toolkit;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:cards="clr-namespace:Syncfusion.Maui.Toolkit.Cards;assembly=Syncfusion.Maui.Toolkit"
             xmlns:vm="clr-namespace:MobileApp.ViewModels"
             x:Class="MobileApp.MainPage"
             x:DataType="vm:MainPageViewModel"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Modern Header Section with Gradient Effect -->
        <Grid Grid.Row="0">
            <BoxView BackgroundColor="{StaticResource Primary}"
                     HeightRequest="180"/>
            <BoxView BackgroundColor="#6D28D9"
                     Opacity="0.3"
                     HeightRequest="180"/>
            
            <Grid Padding="20,15,20,25"
                  RowDefinitions="Auto,Auto,Auto"
                  ColumnDefinitions="*,Auto">
                
                <!-- Welcome Message -->
                <Label Grid.Row="0" Grid.Column="0"
                       Text="Welcome Back"
                       FontSize="16"
                       TextColor="White"
                       Opacity="0.9"
                       Margin="0,10,0,0"/>
                
                <!-- Title -->
                <Label Grid.Row="1" Grid.Column="0"
                       Text="Asset Management"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="0,5,0,0"/>
                
                <!-- Subtitle -->
                <Label Grid.Row="2" Grid.Column="0"
                       Text="Field Recording System"
                       FontSize="14"
                       TextColor="White"
                       Opacity="0.85"
                       Margin="0,5,0,0"/>
                
                <!-- Logout Button - Modern Icon Style -->
                <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                        BackgroundColor="#FFFFFF20"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        Padding="12,10"
                        VerticalOptions="Center"
                        HorizontalOptions="End">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Label Text="🚪"
                           FontSize="20"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                    </Border.GestureRecognizers>
                </Border>
            </Grid>
        </Grid>

        <!-- Main Content Area with Pull-to-Refresh -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding RefreshCommand}"
                     RefreshColor="{StaticResource Primary}">
            <ScrollView>
                <VerticalStackLayout Spacing="20" Padding="20,0,20,20">
                    
                    <!-- Stats Cards Section - Elevated from header -->
                    <Grid ColumnDefinitions="*,*"
                          RowDefinitions="Auto,Auto"
                          ColumnSpacing="12"
                          RowSpacing="12"
                          Margin="0,-40,0,0">
                        
                        <!-- Total Assets Card - Enhanced Design -->
                        <Border Grid.Row="0" Grid.Column="0"
                                BackgroundColor="White"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                Padding="16"
                                Shadow="{Shadow Brush=Black, Opacity=0.08, Radius=12, Offset='0,4'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Grid RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0"
                                        BackgroundColor="#F3F4F6"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        HorizontalOptions="Center"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="📦"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding TotalAssets}"
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#1F2937"/>
                                
                                <Label Grid.Row="2"
                                       Text="Total Assets"
                                       FontSize="13"
                                       HorizontalOptions="Center"
                                       TextColor="#6B7280"/>
                            </Grid>
                        </Border>
                        
                        <!-- Scanned Today Card -->
                        <Border Grid.Row="0" Grid.Column="1"
                                BackgroundColor="White"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                Padding="16"
                                Shadow="{Shadow Brush=Black, Opacity=0.08, Radius=12, Offset='0,4'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Grid RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0"
                                        BackgroundColor="#ECFDF5"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        HorizontalOptions="Center"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="✅"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding ScannedToday}"
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#10B981"/>
                                
                                <Label Grid.Row="2"
                                       Text="Scanned Today"
                                       FontSize="13"
                                       HorizontalOptions="Center"
                                       TextColor="#6B7280"/>
                            </Grid>
                        </Border>
                        
                        <!-- Pending Sync Card -->
                        <Border Grid.Row="1" Grid.Column="0"
                                BackgroundColor="White"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                Padding="16"
                                Shadow="{Shadow Brush=Black, Opacity=0.08, Radius=12, Offset='0,4'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Grid RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0"
                                        BackgroundColor="#FEF3C7"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        HorizontalOptions="Center"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="🔄"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding PendingSync}"
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#F59E0B"/>
                                
                                <Label Grid.Row="2"
                                       Text="Pending Sync"
                                       FontSize="13"
                                       HorizontalOptions="Center"
                                       TextColor="#6B7280"/>
                            </Grid>
                        </Border>
                        
                        <!-- Categories Card -->
                        <Border Grid.Row="1" Grid.Column="1"
                                BackgroundColor="White"
                                Stroke="Transparent"
                                StrokeThickness="0"
                                Padding="16"
                                Shadow="{Shadow Brush=Black, Opacity=0.08, Radius=12, Offset='0,4'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Grid RowSpacing="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0"
                                        BackgroundColor="#F5F3FF"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        HorizontalOptions="Center"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="📋"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <Label Grid.Row="1"
                                       Text="{Binding Categories}"
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="#8B5CF6"/>
                                
                                <Label Grid.Row="2"
                                       Text="Categories"
                                       FontSize="13"
                                       HorizontalOptions="Center"
                                       TextColor="#6B7280"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Quick Actions Section -->
                    <VerticalStackLayout Spacing="16" Margin="0,20,0,0">
                        <Label Text="Quick Actions"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#1F2937"
                               Margin="0,0,0,8"/>
                        
                        <!-- Primary Action - Scan Asset (Featured) -->
                        <Border BackgroundColor="{StaticResource Primary}"
                                Stroke="Transparent"
                                Padding="20,18"
                                Shadow="{Shadow Brush={StaticResource Primary}, Opacity=0.3, Radius=16, Offset='0,6'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="16"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                                <Border Grid.Column="0"
                                        BackgroundColor="#FFFFFF30"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="14"/>
                                    </Border.StrokeShape>
                                    <Label Text="📷"
                                           FontSize="28"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <VerticalStackLayout Grid.Column="1"
                                                   VerticalOptions="Center"
                                                   Spacing="4">
                                    <Label Text="Scan Asset"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="White"/>
                                    <Label Text="Scan barcode or QR code"
                                           FontSize="13"
                                           TextColor="White"
                                           Opacity="0.9"/>
                                </VerticalStackLayout>
                                
                                <Label Grid.Column="2"
                                       Text="›"
                                       FontSize="32"
                                       TextColor="White"
                                       Opacity="0.7"
                                       VerticalOptions="Center"/>
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding ScanAssetCommand}"/>
                            </Border.GestureRecognizers>
                        </Border>
                        
                        <!-- Secondary Actions Grid -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12" RowSpacing="12">
                            
                            <!-- Add New Asset -->
                            <Border Grid.Column="0"
                                    BackgroundColor="White"
                                    Stroke="Transparent"
                                    Padding="16"
                                    Shadow="{Shadow Brush=Black, Opacity=0.06, Radius=10, Offset='0,3'}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                                    <Border BackgroundColor="#ECFDF5"
                                            WidthRequest="52"
                                            HeightRequest="52"
                                            HorizontalOptions="Center"
                                            Stroke="Transparent">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="13"/>
                                        </Border.StrokeShape>
                                        <Label Text="➕"
                                               FontSize="26"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    <Label Text="Add Asset"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding AddAssetCommand}"/>
                                </Border.GestureRecognizers>
                            </Border>
                            
                            <!-- View All Assets -->
                            <Border Grid.Column="1"
                                    BackgroundColor="White"
                                    Stroke="Transparent"
                                    Padding="16"
                                    Shadow="{Shadow Brush=Black, Opacity=0.06, Radius=10, Offset='0,3'}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="14"/>
                                </Border.StrokeShape>
                                <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                                    <Border BackgroundColor="#F5F3FF"
                                            WidthRequest="52"
                                            HeightRequest="52"
                                            HorizontalOptions="Center"
                                            Stroke="Transparent">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="13"/>
                                        </Border.StrokeShape>
                                        <Label Text="📱"
                                               FontSize="26"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Border>
                                    <Label Text="View Assets"
                                           FontSize="15"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="#1F2937"/>
                                </VerticalStackLayout>
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ViewAssetsCommand}"/>
                                </Border.GestureRecognizers>
                            </Border>
                        </Grid>
                        
                        <!-- Sync Data Action -->
                        <Border BackgroundColor="White"
                                Stroke="#E5E7EB"
                                StrokeThickness="1"
                                Padding="18"
                                Shadow="{Shadow Brush=Black, Opacity=0.04, Radius=8, Offset='0,2'}">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="14"/>
                            </Border.StrokeShape>
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="14">
                                <Border Grid.Column="0"
                                        BackgroundColor="#FEF3C7"
                                        WidthRequest="48"
                                        HeightRequest="48"
                                        Stroke="Transparent">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>
                                    <Label Text="☁️"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Border>
                                
                                <VerticalStackLayout Grid.Column="1"
                                                   VerticalOptions="Center"
                                                   Spacing="3">
                                    <Label Text="Sync Data"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#1F2937"/>
                                    <Label Text="Sync with cloud server"
                                           FontSize="13"
                                           TextColor="#6B7280"/>
                                </VerticalStackLayout>
                                
                                <Label Grid.Column="2"
                                       Text="›"
                                       FontSize="28"
                                       TextColor="#D1D5DB"
                                       VerticalOptions="Center"/>
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding SyncDataCommand}"/>
                            </Border.GestureRecognizers>
                        </Border>
                    </VerticalStackLayout>
                    
                    <!-- Last Sync Info Banner -->
                    <Border BackgroundColor="#EFF6FF"
                            Stroke="#DBEAFE"
                            StrokeThickness="1"
                            Padding="16"
                            Margin="0,8,0,0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                            <Border Grid.Column="0"
                                    BackgroundColor="#DBEAFE"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    VerticalOptions="Center"
                                    Stroke="Transparent">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="10"/>
                                </Border.StrokeShape>
                                <Label Text="ℹ️"
                                       FontSize="20"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                <Label Text="Last Sync"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="#1E40AF"/>
                                <Label Text="{Binding LastSync}"
                                       FontSize="12"
                                       TextColor="#3B82F6"/>
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                    
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Modern Bottom Navigation Bar -->
        <Border Grid.Row="2"
                BackgroundColor="White"
                Stroke="#E5E7EB"
                StrokeThickness="1">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="24,24,0,0"/>
            </Border.StrokeShape>
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.08"
                        Radius="20"
                        Offset="0,-4"/>
            </Border.Shadow>
            
            <Grid Padding="8,12,8,20"
                  ColumnDefinitions="*,*,*,*"
                  ColumnSpacing="4">
                
                <!-- Home Tab - Active State -->
                <Border Grid.Column="0"
                        BackgroundColor="#F3F4F6"
                        Stroke="Transparent"
                        Padding="12,10">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                        <Label Text="🏠"
                               FontSize="24"
                               HorizontalOptions="Center"/>
                        <Label Text="Home"
                               FontSize="11"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource Primary}"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RefreshCommand}"/>
                    </Border.GestureRecognizers>
                </Border>
                
                <!-- Assets Tab -->
                <VerticalStackLayout Grid.Column="1"
                                   Spacing="6"
                                   Padding="12,10"
                                   HorizontalOptions="Center">
                    <Label Text="📦"
                           FontSize="24"
                           HorizontalOptions="Center"
                           Opacity="0.6"/>
                    <Label Text="Assets"
                           FontSize="11"
                           HorizontalOptions="Center"
                           TextColor="#6B7280"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAssetsCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
                
                <!-- Reports Tab -->
                <VerticalStackLayout Grid.Column="2"
                                   Spacing="6"
                                   Padding="12,10"
                                   HorizontalOptions="Center">
                    <Label Text="📊"
                           FontSize="24"
                           HorizontalOptions="Center"
                           Opacity="0.6"/>
                    <Label Text="Reports"
                           FontSize="11"
                           HorizontalOptions="Center"
                           TextColor="#6B7280"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToReportsCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
                
                <!-- Settings Tab -->
                <VerticalStackLayout Grid.Column="3"
                                   Spacing="6"
                                   Padding="12,10"
                                   HorizontalOptions="Center">
                    <Label Text="⚙️"
                           FontSize="24"
                           HorizontalOptions="Center"
                           Opacity="0.6"/>
                    <Label Text="Settings"
                           FontSize="11"
                           HorizontalOptions="Center"
                           TextColor="#6B7280"/>
                    <VerticalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}"/>
                    </VerticalStackLayout.GestureRecognizers>
                </VerticalStackLayout>
                
            </Grid>
        </Border>
        
    </Grid>

</ContentPage>
