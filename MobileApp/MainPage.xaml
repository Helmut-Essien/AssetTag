<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Toolkit;assembly=Syncfusion.Maui.Toolkit"
             xmlns:buttons="clr-namespace:Syncfusion.Maui.Toolkit.Buttons;assembly=Syncfusion.Maui.Toolkit"
             xmlns:cards="clr-namespace:Syncfusion.Maui.Toolkit.Cards;assembly=Syncfusion.Maui.Toolkit"
             x:Class="MobileApp.MainPage"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Header Section -->
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource Primary}"
              Padding="20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0"
                   Text="Asset Management"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start"/>
            
            <Label Grid.Row="1"
                   Text="Field Recording System"
                   FontSize="14"
                   TextColor="White"
                   Opacity="0.9"
                   Margin="0,5,0,0"/>
        </Grid>

        <!-- Main Content Area -->
        <ScrollView Grid.Row="1" Padding="15,20">
            <VerticalStackLayout Spacing="15">
                
                <!-- Quick Stats Cards -->
                <Label Text="Quick Overview"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="5,0,0,10"/>
                
                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="15">
                    
                    <!-- Total Assets Card -->
                    <cards:SfCardView Grid.Row="0" Grid.Column="0"
                                      CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0"
                                   Text="📦"
                                   FontSize="32"
                                   HorizontalOptions="Center"/>
                            
                            <Label Grid.Row="1"
                                   x:Name="TotalAssetsLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}"/>
                            
                            <Label Grid.Row="2"
                                   Text="Total Assets"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- Scanned Today Card -->
                    <cards:SfCardView Grid.Row="0" Grid.Column="1"
                                      CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0"
                                   Text="✅"
                                   FontSize="32"
                                   HorizontalOptions="Center"/>
                            
                            <Label Grid.Row="1"
                                   x:Name="ScannedTodayLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#10B981"/>
                            
                            <Label Grid.Row="2"
                                   Text="Scanned Today"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- Pending Sync Card -->
                    <cards:SfCardView Grid.Row="1" Grid.Column="0"
                                      CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0"
                                   Text="🔄"
                                   FontSize="32"
                                   HorizontalOptions="Center"/>
                            
                            <Label Grid.Row="1"
                                   x:Name="PendingSyncLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#F59E0B"/>
                            
                            <Label Grid.Row="2"
                                   Text="Pending Sync"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- Categories Card -->
                    <cards:SfCardView Grid.Row="1" Grid.Column="1"
                                      CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15" RowSpacing="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Label Grid.Row="0"
                                   Text="📋"
                                   FontSize="32"
                                   HorizontalOptions="Center"/>
                            
                            <Label Grid.Row="1"
                                   x:Name="CategoriesLabel"
                                   Text="0"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="#8B5CF6"/>
                            
                            <Label Grid.Row="2"
                                   Text="Categories"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Gray600}"/>
                        </Grid>
                    </cards:SfCardView>
                </Grid>

                <!-- Quick Actions Section -->
                <Label Text="Quick Actions"
                       FontSize="18"
                       FontAttributes="Bold"
                       Margin="5,20,0,10"/>
                
                <VerticalStackLayout Spacing="12">
                    
                    <!-- Scan Asset Button -->
                    <cards:SfCardView CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   CornerRadius="25"
                                   BackgroundColor="{StaticResource Primary}"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="📷"
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1"
                                               Margin="15,0,0,0"
                                               VerticalOptions="Center">
                                <Label Text="Scan Asset"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Scan barcode or QR code"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray600}"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="28"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnScanAssetTapped"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- Add New Asset Button -->
                    <cards:SfCardView CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   CornerRadius="25"
                                   BackgroundColor="#10B981"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="➕"
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1"
                                               Margin="15,0,0,0"
                                               VerticalOptions="Center">
                                <Label Text="Add New Asset"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Register a new asset"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray600}"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="28"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnAddAssetTapped"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- View All Assets Button -->
                    <cards:SfCardView CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   CornerRadius="25"
                                   BackgroundColor="#8B5CF6"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="📱"
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1"
                                               Margin="15,0,0,0"
                                               VerticalOptions="Center">
                                <Label Text="View All Assets"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Browse asset inventory"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray600}"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="28"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnViewAssetsTapped"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </cards:SfCardView>
                    
                    <!-- Sync Data Button -->
                    <cards:SfCardView CornerRadius="12"
                                      BackgroundColor="White"
                                      BorderWidth="0">
                        <Grid Padding="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame Grid.Column="0"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   CornerRadius="25"
                                   BackgroundColor="#F59E0B"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="☁️"
                                       FontSize="24"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"/>
                            </Frame>
                            
                            <VerticalStackLayout Grid.Column="1"
                                               Margin="15,0,0,0"
                                               VerticalOptions="Center">
                                <Label Text="Sync Data"
                                       FontSize="16"
                                       FontAttributes="Bold"/>
                                <Label Text="Sync with cloud server"
                                       FontSize="12"
                                       TextColor="{StaticResource Gray600}"/>
                            </VerticalStackLayout>
                            
                            <Label Grid.Column="2"
                                   Text="›"
                                   FontSize="28"
                                   TextColor="{StaticResource Gray400}"
                                   VerticalOptions="Center"/>
                            
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnSyncDataTapped"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </cards:SfCardView>
                    
                </VerticalStackLayout>
                
                <!-- Last Sync Info -->
                <cards:SfCardView CornerRadius="12"
                                  BackgroundColor="#EFF6FF"
                                  BorderWidth="0"
                                  Margin="0,10,0,20">
                    <Grid Padding="15" ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="ℹ️"
                               FontSize="20"
                               VerticalOptions="Center"/>
                        
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Last Sync"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   TextColor="#1E40AF"/>
                            <Label x:Name="LastSyncLabel"
                                   Text="Never synced"
                                   FontSize="11"
                                   TextColor="#3B82F6"/>
                        </VerticalStackLayout>
                    </Grid>
                </cards:SfCardView>
                
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="2"
              BackgroundColor="White"
              Padding="0,10,0,20"
              ColumnDefinitions="*,*,*,*">
            
            <VerticalStackLayout Grid.Column="0" Spacing="5">
                <Label Text="🏠"
                       FontSize="24"
                       HorizontalOptions="Center"/>
                <Label Text="Home"
                       FontSize="11"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Primary}"
                       FontAttributes="Bold"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnHomeTapped"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="1" Spacing="5">
                <Label Text="📦"
                       FontSize="24"
                       HorizontalOptions="Center"/>
                <Label Text="Assets"
                       FontSize="11"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Gray600}"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnAssetsTapped"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="2" Spacing="5">
                <Label Text="📊"
                       FontSize="24"
                       HorizontalOptions="Center"/>
                <Label Text="Reports"
                       FontSize="11"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Gray600}"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReportsTapped"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
            
            <VerticalStackLayout Grid.Column="3" Spacing="5">
                <Label Text="⚙️"
                       FontSize="24"
                       HorizontalOptions="Center"/>
                <Label Text="Settings"
                       FontSize="11"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource Gray600}"/>
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                </VerticalStackLayout.GestureRecognizers>
            </VerticalStackLayout>
            
        </Grid>
        
    </Grid>

</ContentPage>
