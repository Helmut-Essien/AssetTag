<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileApp"
    xmlns:views="clr-namespace:MobileApp.Views"
    Title="MobileApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <!-- Define Shell Resources for Tab Bar Styling -->
    <Shell.Resources>
        <Style TargetType="TabBar">
            <Setter Property="Shell.TabBarBackgroundColor" Value="White"/>
            <Setter Property="Shell.TabBarTitleColor" Value="#666666"/>
            <Setter Property="Shell.TabBarUnselectedColor" Value="#666666"/>
            <Setter Property="Shell.TabBarForegroundColor" Value="#005A9C"/>
        </Style>
    </Shell.Resources>

    <!-- Initial Splash Screen (shown before login) -->
    <ShellContent
        x:Name="InitialContent"
        Route="SplashScreen"
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False" />

    <!-- Main Tab Bar (shown after login) -->
    <!-- Using ContentTemplate for lazy loading - pages are only created when navigated to -->
    <TabBar x:Name="MainTabBar" Route="MainTabs" IsVisible="False">
        
        <!-- Home Tab -->
        <Tab Title="Home" Route="Home" Icon="tab_home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <!-- Inventory Tab - Lazy loaded for better performance -->
        <Tab Title="Inventory" Route="Inventory" Icon="tab_inventory.png">
            <ShellContent ContentTemplate="{DataTemplate views:InventoryPage}"/>
        </Tab>

        <!-- Categories Tab (Placeholder) -->
        <Tab Title="Categories" Route="Categories" Icon="tab_categories.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <!-- Locations Tab (Placeholder) -->
        <Tab Title="Locations" Route="Locations" Icon="tab_locations.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

    </TabBar>

</Shell>
